    "jsx": "react",
    "module": "commonjs",
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es2017",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/**/*"]
}
